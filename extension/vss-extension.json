{
    "manifestVersion": 1,
    "id": "wiql-editor",
    "version": "1.6.10",
    "name": "Wiql Editor",
    "scopes": [ "vso.work", "vso.work_write" ],
    "description": "Search work items with wiql queries.",
    "publisher": "ottostreifel",
    "icons": {
        "default": "img/logo.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "agile",
        "work Item",
        "query",
        "wiql"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/ostreifel/wiql-editor"
    },
    "branding": {
        "color": "rgb(220, 235, 252)",
        "theme": "light"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "build",
            "addressable": true
        },
        {
            "path": "styles",
            "addressable": true
        },
        {
            "path": "playground.html",
            "addressable": true
        },
        {
            "path": "queryEditor.html",
            "addressable": true
        },
        {
            "path": "queryContext.html",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [
        {
            "id": "wiql-playground-hub",
            "type": "ms.vss-web.hub",
            "description": "Playground for wiql queries",
            "targets": [
                "ms.vss-work-web.work-hub-group"
            ],
            "properties": {
                "name": "Wiql Playground",
                "uri": "playground.html"
            }
        },
        {
            "id": "query-menu",
            "type": "ms.vss-web.action-provider",
            "description": "Edit query in menu",
            "targets": [
                "ms.vss-work-web.work-item-query-menu"
            ],
            "properties": {
                "group": "contributed",
                "uri": "queryContext.html"
            }
        },
        {
            "id": "contextForm",
            "type": "ms.vss-web.control",
            "description": "Editor for the given query",
            "targets": [ ],
            "properties": {
                "uri": "queryEditor.html",
                "registeredObjectId": "dialogCallbacks"
            }
        }
    ]
}
